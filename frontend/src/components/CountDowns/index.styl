@import '../../colors.styl'

.item
  display flex
  flex-wrap wrap
  align-items center
  width 100%
  margin-bottom 20px
  color text-color
  text-decoration none

.title
  font-size 24px
  flex 2

.date
  font-size 16px
  flex 1
  text-align right


.show
  padding 0 20px

  h1
    padding-bottom 5px
    margin-bottom 5px
    text-align center
    color alt-text-color
    border-bottom 1px solid alt-text-color

  p
    font-size 18px
    line-height 1.75em
    padding 0 15px
    margin-bottom 20px

.altdate
  font-size 30px
  text-align center


form
  padding 0 20px

.strong
  margin-right 10px
  color alt-text-color
  text-transform capitalize

.errors
  padding 0

.error
  list-style none
  padding 3px 5px
  margin 2px 0
  background rgba(alt-text-color, 0.3)
  border 1px solid rgba(alt-text-color, 0.7)
  border-radius 3px

.field
  display block
  width 100%
  padding 10px 0

  textarea,
  input
    font-size 21px
    width calc(100% - 20px)
    padding 4px 10px
    background text-color
    border 1px solid darken(text-color, 45)
    border-radius 3px
    box-shadow inset 0 0 5px #999


  textarea
    min-height 200px

.buttons
  display flex

.button
.cancel
  font-size 21px
  padding 7px 30px
  color #333
  border-radius 3px

.cancel
  margin-left auto
  background #bbb
  border 1px solid darken(#bbb, 15)
  text-decoration none

.button
  background alt-text-color
  border 1px solid darken(alt-text-color, 15)

@import '../../colors.styl'

.app
  position relative

.header
  display flex
  flex-direction column
  padding 10px
  background -moz-linear-gradient(top, rgba(50,66,91,1) 0%, rgba(40,53,73,1) 100%)
  background -webkit-linear-gradient(top, rgba(50,66,91,1) 0%,rgba(40,53,73,1) 100%)
  background linear-gradient(to bottom, rgba(50,66,91,1) 0%,rgba(40,53,73,1) 100%)
  color alt-text-color
  border-bottom 1px solid base-blue
  -webkit-box-shadow 0px 2px 24px 0px rgb(40, 53, 73,0.5)
  -moz-box-shadow 0px 2px 24px 0px rgb(40, 53, 73,0.5)
  box-shadow 0px 2px 24px 0px rgb(40, 53, 73,0.5)

.h3
  width 100%
  margin 0
  padding 0
  text-align center

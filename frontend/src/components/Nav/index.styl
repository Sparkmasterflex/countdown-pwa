@import '../../colors.styl'

.nav
	position fixed
	bottom 0
	left 0
	right 0
	z-index 200
	background text-color

.links
	display flex
	margin 0
	padding 0
	list-style none


	li
		flex 1
		padding 15px 0
		text-align center
		background rgba(lite-blue, 0.9)

		a
			display block
			font-size 36px
			color text-color

		&.active
			background rgba(alt-text-color, 0.3)

			a
				color alt-text-color

